{
  "moduleFileExtensions": ["js", "ts"],
  "transform": {
    "^.+\\.(ts|tsx)$": ["ts-jest", {
      "tsconfig": "<rootDir>/tsconfig.json",
      "isolatedModules": true
    }]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testEnvironment": "node",
  "modulePaths": ["node_modules", "<rootDir>/src"]
}
